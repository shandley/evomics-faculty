# ================================
# IBC-AI Production Environment Configuration
# Copy this file to .env and customize for your deployment
# ================================

# ================================
# Database Configuration
# ================================
DB_NAME=ibc_ai
DB_USER=ibcai
DB_PASSWORD=changeme-secure-password-here
DB_HOST=database
DB_PORT=5432

# Legacy PostgreSQL configuration (for existing deployments)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ibc_ai

# ================================
# Application Security
# ================================
# Generate a secure secret key for JWT tokens (32+ characters)
SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-chars
API_SECRET_KEY=generate_a_secure_secret_key

# Environment and logging
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-university-domain.edu
ALLOWED_ORIGINS=http://localhost:3000,https://your-university-domain.edu

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-university-domain.edu

# ================================
# Port Configuration - CRITICAL: DO NOT CHANGE
# These ports MUST match the configuration in CLAUDE.md
# ================================
IBC_BACKEND_PORT=8005
IBC_FRONTEND_PORT=3000
IBC_DB_PORT=5432

# Server Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Backend Configuration
MINIMAL_BACKEND_HOST=0.0.0.0
MINIMAL_BACKEND_PORT=8005
BACKEND_WORKERS=2
MAX_CONNECTIONS=100
MAX_UPLOAD_SIZE=50MB

# Frontend Configuration
VITE_API_URL=http://localhost:8005

# ================================
# Data Storage
# ================================
# Directory for persistent data storage
DATA_DIR=./data

# ================================
# AI and NLP Configuration
# ================================
# spaCy model for entity extraction
SPACY_MODEL=en_core_web_sm

# ================================
# Phase 7B: Enhanced Biomedical AI Configuration
# ================================
# Deployment phase (determines available features)
DEPLOYMENT_PHASE=phase_7

# Ollama service configuration
OLLAMA_BASE_URL=http://ollama:11434
BIOMEDICAL_MODEL=biomistral:7b

# Enhanced AI feature flags
FEATURE_BIOMEDICAL_LLM=true
FEATURE_OLLAMA=true
FEATURE_ENHANCED_EXTRACTION=true

# Knowledge database configuration
KNOWLEDGE_DB_PATH=/app/knowledge_databases

# AI Analysis performance settings
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_TIMEOUT_SECONDS=300

# Optional: API Keys for premium AI features (user-configurable)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# University-Specific Settings
# ================================
# Institution name for branding
INSTITUTION_NAME=Your University Name

# Admin email for system notifications
ADMIN_EMAIL=ibc-admin@your-university.edu

# Support contact information
SUPPORT_EMAIL=support@your-university.edu
SUPPORT_PHONE=+1-555-123-4567

# ================================
# Optional: External Integrations
# ================================
# LDAP/Active Directory (if using external auth)
# LDAP_SERVER=ldap.your-university.edu
# LDAP_BASE_DN=dc=your-university,dc=edu

# SMTP for email notifications
# SMTP_HOST=smtp.your-university.edu
# SMTP_PORT=587
# SMTP_USER=ibc-system@your-university.edu
# SMTP_PASSWORD=email-password